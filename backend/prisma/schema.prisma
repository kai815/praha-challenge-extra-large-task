datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model SomeData {
  id       String  @id
  required Boolean
  number   Int     @db.SmallInt
}

model User {
  id         String       @id
  name       String
  email      String       @unique
  status     Status       @default(Inmembership)
  UserTask   UserTask[]
  PairMember PairMember[]
}

enum Status {
  Inmembership
  Inactive
  Withdrawn
}

model Task {
  id          String     @id
  title       String
  reason      String
  description String
  UserTask    UserTask[]
}

model UserTask {
  id     String     @id
  status TaskStatus @default(NotStarted)
  user   User       @relation(fields: [userId], references: [id])
  userId String
  task   Task       @relation(fields: [taskId], references: [id])
  taskId String
}

enum TaskStatus {
  NotStarted
  InReview
  Completed
}

model Pair {
  id         String       @id
  name       String
  PairMember PairMember[]
  TeamPair   TeamPair[]
}

model PairMember {
  id     String @id
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
  pair   Pair   @relation(fields: [pairId], references: [id])
  pairId String @unique
}

model Team {
  id       String     @id
  name     String
  TeamPair TeamPair[]
}

model TeamPair {
  id     String @id
  team   Team   @relation(fields: [teamId], references: [id])
  teamId String @unique
  pair   Pair   @relation(fields: [pairId], references: [id])
  pairId String @unique
}
