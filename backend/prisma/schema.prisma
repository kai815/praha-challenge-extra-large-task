datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  previewFeatures = ["nativeTypes"]
  provider        = "prisma-client-js"
}

model Post {
  id        String    @id
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  String?
}

model User {
  id        String    @id
  email    String   @unique
  age      Int?     @db.Integer
  fullname String?
  posts    Post[]
  profile  Profile?
  hellos   Hello[]
}

model Hello {
  id        String    @id
  hello    String
  required Boolean
  number   Int     @db.SmallInt
  users    User[]
}

model Profile {
  id        String    @id
  bio    String
  user   User   @relation(fields: [userId], references: [id])
  userId String    @unique
}
