datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model SomeData {
  id       String  @id
  required Boolean
  number   Int     @db.SmallInt
}

model User {
  id       String     @id
  name     String
  email    String     @unique
  status   Status     @default(Inmembership)
  UserTask UserTask[]
}

enum Status {
  Inmembership
  Inactive
  Withdrawn
}

model Task {
  id          String     @id
  title       String
  reason      String
  description String
  UserTask    UserTask[]
}

model UserTask {
  id     String     @id
  status TaskStatus @default(NotStarted)
  user   User       @relation(fields: [userId], references: [id])
  userId String     @unique
  task   Task       @relation(fields: [taskId], references: [id])
  taskId String     @unique
}

enum TaskStatus {
  NotStarted
  InReview
  Completed
}

model Pair {
  id   String @id
  name String
}
